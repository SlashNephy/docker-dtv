{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>SlashNephy/renovate-config"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "ghcr.io/slashnephy/**"
      ],
      "minimumReleaseAge": null,
      "versioning": "loose"
    },
    {
      "matchFileNames": [
        "src/chinachu/Dockerfile"
      ],
      "matchPackageNames": [
        "node"
      ],
      "allowedVersions": "<= 16"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/Dockerfile$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?) depName=(?<depName>.+?) branch=(?<currentValue>.+?)\\sARG .+?_REF=\"(?<currentDigest>.+?)\""
      ]
    }
  ]
}
