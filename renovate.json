{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>SlashNephy/renovate-config"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "ghcr.io/slashnephy{/,}**"
      ],
      "minimumReleaseAge": null,
      "versioning": "loose"
    },
    {
      "matchFileNames": [
        "src/chinachu/Dockerfile"
      ],
      "matchPackageNames": [
        "node"
      ],
      "allowedVersions": "<= 16"
    }
  ]
}
